<%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, as: :integer %>
    <%= f.submit "Create review", class: "btn btn-primary" %>
  <%= f.button :button do %>
    <%= link_to 'Cancel review creation', restaurant_path(@restaurant)  %>
  <% end %>
<% end %>

