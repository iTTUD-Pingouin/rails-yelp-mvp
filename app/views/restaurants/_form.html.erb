<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
  <%= f.button :button do %>
    <%= link_to 'Cancel creation', restaurants_path  %>
  <% end %>


<% end %>
